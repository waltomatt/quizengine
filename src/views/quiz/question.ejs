<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include("../partials/includes") %>
        <title>Quiz Question</title>
    </head>

    <body>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-12">
                    <h2><%=question.question%></h2>

                    <form action="submit" class="mt-4" method="POST">
                        <input type="hidden" name="quiz" value="<%=quiz%>">
                    <% for (const answer of answers) { %>
                        <div class="form-check ml-3">
                            <input class="form-check-input" type="radio" name="answer" value="<%=answer.id%>" >
                            <label class="form-check-label" for="exampleRadios1">
                                <%=answer.answer%>
                            </label>
                        </div>
                    <% } %>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mt-4">Submit answer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </body>
</html>